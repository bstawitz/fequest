          </div>
          <div class="col-md-4">
            <div class="text-right">
              <% if toggle.even? %>
              <strong>hmackinnon</strong>
            <% else %>
              <strong>bstawitz</strong>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
